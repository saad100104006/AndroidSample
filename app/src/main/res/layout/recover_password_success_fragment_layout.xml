<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginTop="50dp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/ic_close" />

    <TextView
        android:id="@+id/title"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="94dp"
        android:gravity="center"
        android:lineSpacingExtra="12sp"
        android:maxLines="2"
        android:text="@string/title_recover_success"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/check_email"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:text="@string/check_mail"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <Button
        android:id="@+id/sign_in"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/oval_button_black"
        android:letterSpacing="0.17"
        android:lineSpacingExtra="2sp"
        android:text="@string/sign_in"
        android:textColor="@color/white"
        android:theme="@style/Button.Black" />

    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:text="@string/didnt_receive"
        android:textColor="@color/black"
        android:textSize="10sp" />

</LinearLayout>