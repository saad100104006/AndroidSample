<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buttonGoBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/left_right_main_screen"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/titleRecipient"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="24dp"
        android:lineSpacingExtra="16sp"
        android:text="@string/new_recipient"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />

    <TextView
        android:id="@+id/descriptionRecipient"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="24dp"
        android:text="@string/new_recipient_details"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/firstName"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_field"
        android:hint="@string/first_name_recipient_hint"
        android:inputType="textNoSuggestions|text"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="14sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/lastName"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:hint="@string/last_name_recipient_hint"
        android:inputType="textNoSuggestions|text"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="14sp" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/phoneInput"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:hint="@string/enter_phone_number"
        android:inputType="textNoSuggestions|phone"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <uk.co.transferx.app.ui.customview.CustomSpinner
        android:id="@+id/countrySpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@color/transparent"
        app:dropDownItemRes="@layout/item_country" />

    <Button
        android:id="@+id/addRecipientButton"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/btn_style_bright"
        android:enabled="false"
        android:lineSpacingExtra="2sp"
        android:text="@string/add_recipients"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/transferButton"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/btn_style_bright"
        android:lineSpacingExtra="2sp"
        android:text="@string/new_transfer"
        android:textColor="@color/black"
        android:visibility="gone"
        tools:visibility="visible" />

    <Button
        android:id="@+id/delete_recipient"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/btn_style_bright"
        android:lineSpacingExtra="2sp"
        android:text="@string/delete_recipient"
        android:textColor="@color/black"
        android:theme="@style/Button.Black"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>