<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginTop="30dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/title"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="40dp"
        android:gravity="left"
        android:lineSpacingExtra="12sp"
        android:text="@string/login_details"
        android:textColor="@color/black"
        android:textSize="24sp" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/emailInputText"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:hint="@string/hint_email_address"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/passwordInputText"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:hint="@string/hint_password"
        android:inputType="textNoSuggestions|textPassword"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="6dp"
        android:lineSpacingExtra="2sp"
        android:text="@string/password_rules"
        android:textColor="#4e4e4e"
        android:textSize="10sp"
        tools:text="Password must contain 8 characters and 1 capital letter." />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/rePasswordInputText"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:hint="@string/hint_repassword"
        android:inputType="textNoSuggestions|textPassword"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/buttonNextStep"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_style_bright"
        android:enabled="false"
        android:lineSpacingExtra="2sp"
        android:text="@string/next_register"
        android:textAllCaps="false"
        android:textColor="@color/black" />

</LinearLayout>