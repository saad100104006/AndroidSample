<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="64dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="32dp"
        android:lineSpacingExtra="12sp"
        android:text="@string/enter_your_pin"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.chaos.view.PinView
        android:id="@+id/loginPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:inputType="number|numberPassword"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:itemCount="4"
        app:itemSpacing="16dp"
        app:itemWidth="74dp"
        app:lineWidth="2dp"
        app:viewType="line" />

    <Button
        android:id="@+id/signInPinButton"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="48dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/btn_style_bright"
        android:lineSpacingExtra="2sp"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/textForgotPin"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center"
        android:text="@string/forgot_pin"
        android:textColor="@color/black"
        android:layout_marginTop="48dp"
        android:lineSpacingExtra="6sp"
        android:textSize="14sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>