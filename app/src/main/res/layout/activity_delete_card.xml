<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="#f7f7f7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/changeButtonBack"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginBottom="41dp"
                android:layout_marginStart="@dimen/left_right_main_screen"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/semiBold"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/left_right_main_screen"
                android:text="Visa*9379"
                android:textColor="@color/color_text_primary"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/color_text_disabled" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#f7f7f7"
            android:gravity="center|top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center|left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name on card"
                    android:textColor="#0d1e27"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Abigail Campbell"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginLeft="31.5dp"
                android:background="@color/color_text_disabled" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center|left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Card number"
                    android:textColor="#0d1e27"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**** **** **** 5938"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginLeft="31.5dp"
                android:background="@color/color_text_disabled" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:gravity="center|left"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expiration date"
                    android:textColor="#0d1e27"
                    android:textSize="16sp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10/2020"
                    android:textColor="#777777"
                    android:textSize="16sp"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginLeft="10dp"
                    />



            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:layout_marginLeft="31.5dp"
                android:background="@color/color_text_disabled" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@color/white"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:gravity="center|left"
                    >




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CVV"
                        android:textColor="#0d1e27"
                        android:textSize="16sp"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="10dp"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***"
                        android:textColor="#777777"
                        android:textSize="16sp"
                        android:layout_marginTop="11dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginLeft="10dp"
                        />


                </LinearLayout>


            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="right"
                android:background="@color/color_text_disabled" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>
