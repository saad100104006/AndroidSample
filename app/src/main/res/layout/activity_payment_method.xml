<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_payment"
        android:gravity="center|top"
        android:orientation="vertical"
        android:background="#121212"
    >

    <ImageView
        android:id="@+id/changeButtonBack"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginTop="106dp"
        android:src="@drawable/complete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        >


        <TextView
            style="@style/semiBold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="34dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="Payment method added successfully!"
            android:textColor="#ffb300"
            android:textSize="24sp" />


        <TextView

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="34dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="Payment method added successfully!"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/savePassword"
            style="@style/LogoutButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/oval_button_yellow"
            android:letterSpacing="0.17"
            android:lineSpacingExtra="2sp"
            android:paddingBottom="16dp"
            android:paddingLeft="60dp"
            android:paddingRight="57dp"
            android:paddingTop="12dp"
            android:text="Make a new transfer"
            android:textAllCaps="false"
            android:textColor="@color/black_tutorial"
            android:textSize="18sp"
            android:textStyle="bold"
            android:theme="@style/Button.White" />

        <TextView

            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="34dp"
            android:layout_marginEnd="30dp"
            android:gravity="center"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="Payment method added successfully!"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


    </LinearLayout>

