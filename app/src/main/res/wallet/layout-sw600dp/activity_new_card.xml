<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_bg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="127dp"
            android:background="#f7f7f7"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ButtonBackCard"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginBottom="41dp"
                android:layout_marginStart="@dimen/left_right_main_screen"
                android:layout_marginTop="23dp"
                android:src="@drawable/ic_back" />

            <TextView
                style="@style/semiBold"
                android:layout_width="300dp"
                android:layout_height="36dp"
                android:layout_marginBottom="6dp"
                android:layout_marginLeft="30dp"
                android:gravity="center|left"
                android:layout_marginRight="@dimen/left_right_main_screen"
                android:text="New card"
                android:textColor="@color/color_text_primary"
                android:textSize="20sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="right"
            android:background="@color/color_text_separator" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/grey_bg"
            android:orientation="vertical"
            >

            <TextView
                style="@style/semiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="34dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="20.5dp"
                android:text="Add the details of your card to send money faster."
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="35dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/nameOnCard"
                    style="@style/LogoutDialogStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field"
                    android:hint="Name on card"
                    android:inputType="textNoSuggestions|textEmailAddress"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_text_disabled"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="31dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="9dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/cardNumber"
                    style="@style/LogoutDialogStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field"
                    android:hint="Card number"
                    android:inputType="textNoSuggestions|number"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_text_disabled"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="9dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/ExpirationDate"
                    style="@style/LogoutDialogStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field"
                    android:hint="Expiration date"
                    android:inputType="textNoSuggestions|number"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_text_disabled"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="29dp"
                android:layout_marginTop="9dp">

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/securityCode"
                    style="@style/LogoutDialogStyle2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/input_field"
                    android:hint="CVV"
                    android:inputType="textNoSuggestions|number"
                    android:maxLines="1"
                    android:padding="16dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/color_text_disabled"
                    android:textSize="16sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="21dp">

                <Button
                    android:id="@+id/saveCard"
                    style="@style/LogoutButtonStyle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:background="@drawable/oval_button_yellow"
                    android:letterSpacing="0.17"
                    android:lineSpacingExtra="2sp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="60dp"
                    android:paddingRight="57dp"
                    android:paddingTop="12dp"
                    android:text="Add Card"
                    android:textAllCaps="false"
                    android:textColor="@color/black_tutorial"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:theme="@style/Button.White" />
            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</ScrollView>
