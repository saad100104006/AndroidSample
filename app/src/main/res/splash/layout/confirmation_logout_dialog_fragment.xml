<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/white"
    android:orientation="vertical">


    <TextView
        android:id="@+id/message"
        style="@style/LogoutDialogStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="34dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_blue_grey"
        android:textSize="20sp"
        tools:text="@string/confirmation" />


    <TextView
        android:id="@+id/details"
        style="@style/LogoutDialogStyle2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:gravity="center_horizontal"
        android:textColor="@color/dark_blue_grey"
        android:textSize="20sp"
        tools:text="@string/logout_text" />
    <Button
        android:id="@+id/button_yes"
        style="@style/LogoutButtonStyle"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:textAllCaps="false"
        android:background="@drawable/oval_button_yellow"
        android:letterSpacing="0.17"
        android:lineSpacingExtra="2sp"
        android:text="Logout"
        android:textColor="@color/dark_blue_grey"
        android:textSize="18sp"
        android:textStyle="bold"
        android:theme="@style/Button.White" />


    <TextView
        android:id="@+id/button_no"
        style="@style/LogoutDialogStyle"
        android:layout_width="270dp"
        android:layout_height="44dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:textColor="@color/dark_blue_grey"
        android:textSize="14sp"
        android:text="@string/cancel" />



</LinearLayout>