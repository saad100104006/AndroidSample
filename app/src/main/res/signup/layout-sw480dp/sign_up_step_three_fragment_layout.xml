<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/first_label_pin"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="32dp"
        android:text="@string/pin"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.chaos.view.PinView
        android:id="@+id/firstPinEntry"
        style="@style/PinWidget.PinView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:gravity="center"
        android:inputType="number|numberPassword"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:itemCount="4"
        app:itemSpacing="16dp"
        app:itemWidth="74dp"
        app:lineWidth="2dp"
        app:viewType="line" />

    <TextView
        android:id="@+id/second_label_pin"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="16dp"
        android:text="@string/confirm_pin"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <com.chaos.view.PinView
        android:id="@+id/secondPinEntry"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:inputType="number|numberPassword"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:itemCount="4"
        app:itemSpacing="16dp"
        app:itemWidth="74dp"
        app:lineWidth="2dp"
        app:viewType="line" />

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/btn_style_bright"
        android:enabled="false"
        android:lineSpacingExtra="2sp"
        android:text="@string/set_pin"
        android:textAllCaps="false"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/terms"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:text="@string/terms"
        android:textColor="@color/black"
        android:textSize="10sp" />

</LinearLayout>