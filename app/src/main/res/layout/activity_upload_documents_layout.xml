<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/buttonBackUpload"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/left_right_main_screen"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_back" />


    <TextView
        android:id="@+id/uploadTitle"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/buttonBackUpload"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/upload_documentation"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/proofOfId"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uploadTitle"
        android:drawableStart="@drawable/ic_profile_additional"
        android:drawableEnd="@drawable/ic_add"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/proof_of_id"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/proofOfAddress"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:clickable="true"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/proofOfId"
        android:drawableStart="@drawable/ic_proof_of_address"
        android:drawableEnd="@drawable/ic_add"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/proof_of_address"
        android:textColor="@color/black"
        android:textSize="14sp" />

</android.support.constraint.ConstraintLayout>