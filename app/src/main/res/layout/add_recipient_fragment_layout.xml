<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/recipient_details"
            android:layout_marginBottom="32dp"
            android:textColor="@color/black"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/recipient_img"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/placeholder"
            android:layout_marginBottom="32dp"/>

        <TextView
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/first_name"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/firstName"
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:layout_height="40dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:layout_marginBottom="16dp"
            android:hint="@string/first_name_recipient_hint"
            android:textColorHint="@color/hint"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:background="@drawable/underline_normal"
            android:drawablePadding="10dp"
            android:inputType="textNoSuggestions|text"
            android:lineSpacingExtra="2sp"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:theme="@style/Button.Black" />


        <TextView
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/last_name"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/lastName"
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:textSize="14sp"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:background="@drawable/underline_normal"
            android:drawablePadding="10dp"
            android:textColorHint="@color/hint"
            android:hint="@string/last_name_recipient_hint"
            android:inputType="textNoSuggestions|text"
            android:lineSpacingExtra="2sp"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/black"
            android:theme="@style/Button.Black" />


        <TextView
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/country"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <uk.co.transferx.app.view.CustomSpinner
            android:id="@+id/countrySpinner"
            style="@style/Widget.AppCompat.Spinner.Underlined"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            app:dropDownItemRes="@layout/item_country"
            app:headerRes="@layout/spinner_select_black_arrow"
            android:background="@android:color/transparent"
            android:theme="@style/ThemeSpinner"/>

        <View
            android:layout_width="match_parent"
            android:background="@color/black"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginBottom="16dp"
            android:layout_height="2dp"/>

        <TextView
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/phone"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="10sp" />

        <android.support.design.widget.TextInputEditText
            android:id="@+id/phoneInput"
            style="@style/CommonStyle"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            android:background="@drawable/underline_normal"
            android:textSize="14sp"
            android:hint="@string/enter_phone_number"
            android:inputType="textNoSuggestions|phone"
            android:lineSpacingExtra="2sp"
            android:maxLines="1"
            android:paddingBottom="8dp"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/add_recipient_button"
            style="@style/CommonButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_marginTop="48dp"
            android:background="@drawable/oval_button_gray"
            android:letterSpacing="0.17"
            android:lineSpacingExtra="2sp"
            android:enabled="false"
            android:text="@string/add_recipients"
            android:textColor="@color/white"
            android:theme="@style/Button.Black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="48dp" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>