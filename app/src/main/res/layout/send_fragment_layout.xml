<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/recipient_title"
            style="@style/TextMainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/recipient_label" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/photo"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="4dp"
                    android:src="@drawable/placeholder" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="26dp"
                    android:text="Sergey Milewski"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/country"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="16dp"
                    android:text="PL"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/delivery_method_title"
            style="@style/TextMainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/delivery_label" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:padding="15dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp">

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/delivery_method"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:gravity="center"
                android:padding="15dp">

            </android.support.v7.widget.AppCompatSpinner>

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/amount_title"
            style="@style/TextMainStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:text="@string/amount" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="30dp">

                <ImageView
                    android:id="@+id/country_flag_first"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="18dp" />

                <TextView
                    android:id="@+id/first_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/country_flag_first"
                    android:clickable="true"
                    android:drawableEnd="@drawable/triangle"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="30dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@id/first_currency"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:text="100"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/country_flag_first"
                    android:background="@color/background" />

                <ImageView
                    android:id="@+id/country_flag_second"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/divider"
                    android:layout_marginBottom="18dp"
                    android:layout_marginTop="18dp" />

                <TextView
                    android:id="@+id/second_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider"
                    android:layout_marginTop="18dp"
                    android:layout_toRightOf="@id/country_flag_second"
                    android:clickable="true"
                    android:drawableEnd="@drawable/triangle"
                    android:drawablePadding="10dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="30dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/divider"
                    android:layout_toRightOf="@id/second_currency"
                    android:background="@null"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:inputType="numberDecimal"
                    android:maxLines="1"
                    android:paddingTop="18dp"
                    android:text="100"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp" />


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <TextView
                    android:id="@+id/rate_label"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:paddingLeft="30dp"
                    android:text="@string/today_rate_label"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp" />


                <TextView
                    android:id="@+id/rate_value"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center_vertical"
                    android:paddingRight="30dp"
                    android:text="1 EUR = 4.2105 PLN"
                    android:textColor="@color/colorAccent"
                    android:textSize="12sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v4.widget.Space
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-7dp"
            android:layout_marginEnd="-5dp"
            android:layout_marginStart="-5dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:minHeight="60dp"
            android:text="@string/send_money"
            android:textAllCaps="false"
            android:textSize="24sp"
            android:theme="@style/ButtonSend" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>