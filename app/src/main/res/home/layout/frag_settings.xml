<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:fillViewport="true"
    >

    <android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/settings_title"
        style="@style/tv_toolbar_heading"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="40dp"
        android:text="Settings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"/>

    <ImageView
        android:id="@+id/menu_icon1"
        style="@style/settings_icon"
        android:src="@drawable/ic_settings_account"
        android:layout_marginTop="36dp"
        app:layout_constraintStart_toStartOf="@+id/settings_title"
        app:layout_constraintTop_toBottomOf="@+id/settings_title"
       />

    <TextView
        android:id="@+id/menu_item1"
        style="@style/settings_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon1"
        app:layout_constraintLeft_toRightOf="@id/menu_icon1"
        app:layout_constraintTop_toTopOf="@+id/menu_icon1"/>


    <ImageView
        android:id="@+id/menu_icon2"
        style="@style/settings_icon"
        android:src="@drawable/ic_settings_notifications"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/menu_icon1"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon1"
       />

    <TextView
        android:id="@+id/menu_item2"
        style="@style/settings_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon2"
        app:layout_constraintLeft_toRightOf="@id/menu_icon2"
        app:layout_constraintTop_toTopOf="@+id/menu_icon2"/>


    <ImageView
        android:id="@+id/menu_icon3"
        style="@style/settings_icon"
        android:src="@drawable/ic_settings_referrals"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/menu_icon2"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon2"
        />

    <TextView
        android:id="@+id/menu_item3"
        style="@style/settings_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Referrals"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon3"
        app:layout_constraintLeft_toRightOf="@id/menu_icon3"
        app:layout_constraintTop_toTopOf="@+id/menu_icon3"/>


    <ImageView
        android:id="@+id/menu_icon4"
        style="@style/settings_icon"
        android:src="@drawable/ic_settings_support"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/menu_icon3"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon3"
        />

    <TextView
        android:id="@+id/menu_item4"
        style="@style/settings_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About us"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon4"
        app:layout_constraintLeft_toRightOf="@id/menu_icon4"
        app:layout_constraintTop_toTopOf="@+id/menu_icon4"/>


    <ImageView
        android:id="@+id/menu_icon5"
        style="@style/settings_icon"
        android:src="@drawable/ic_settings_account"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/menu_icon4"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon4"
      />

    <TextView
        android:id="@+id/menu_item5"
        style="@style/settings_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Support"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon5"
        app:layout_constraintLeft_toRightOf="@id/menu_icon5"
        app:layout_constraintTop_toTopOf="@+id/menu_icon5"/>


    <ImageView
        android:id="@+id/menu_icon6"
        style="@style/settings_icon"
        android:src="@drawable/ic_settings_logout"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toStartOf="@+id/menu_icon5"
        app:layout_constraintTop_toBottomOf="@+id/menu_icon5"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/menu_item6"
        style="@style/settings_item_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        app:layout_constraintBottom_toBottomOf="@+id/menu_icon6"
        app:layout_constraintLeft_toRightOf="@id/menu_icon6"
        app:layout_constraintTop_toTopOf="@+id/menu_icon6"/>

</android.support.constraint.ConstraintLayout>
</ScrollView>