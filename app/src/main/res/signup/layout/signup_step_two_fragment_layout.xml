<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buttonBack"
        android:layout_width="28dp"
        android:layout_height="24dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginTop="30dp"
        android:background="?selectableItemBackgroundBorderless"
        android:clickable="true"
        android:src="@drawable/ic_back" />

    <TextView
        android:id="@+id/title"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="32dp"
        android:gravity="left"
        android:lineSpacingExtra="12sp"
        android:text="@string/personal_details"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/firstNameInputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:lineSpacingExtra="2sp"
        android:hint="@string/first_name"
        android:maxLines="1"
        android:padding="12dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/secondNameInputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:hint="@string/last_name"
        android:inputType="textNoSuggestions|textEmailAddress"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp" />


    <android.support.design.widget.TextInputEditText
        android:id="@+id/phoneNumberInputText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/input_field"
        android:inputType="textNoSuggestions|phone"
        android:hint="@string/phone_number"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:padding="12dp" />

    <uk.co.transferx.app.ui.customview.CustomSpinner
        android:id="@+id/countrySpinner"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@color/transparent"
        app:dropDownItemRes="@layout/item_country" />

    <Button
        android:id="@+id/buttonNextOne"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="18dp"
        android:background="@drawable/btn_style_bright"
        android:enabled="false"
        android:textColor="@color/black"
        android:lineSpacingExtra="2sp"
        android:textAllCaps="false"
        android:text="@string/next_register" />

    <TextView
        android:id="@+id/terms"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:gravity="center"
        android:lineSpacingExtra="6sp"
        android:maxLines="2"
        android:text="@string/terms"
        android:textColor="@color/black"
        android:textSize="10sp" />

</LinearLayout>