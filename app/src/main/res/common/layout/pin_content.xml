<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/title"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:gravity="center_horizontal|top"
        android:lineSpacingExtra="12sp"
        android:text="@string/enter_pin"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:typeface="sans" />

    <TextView
        style="@style/CommonStyle"
        android:id="@+id/first_label_pin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="@string/pin"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:textStyle="bold" />

    <com.chaos.view.PinView
        android:id="@+id/first_pin"
        style="@style/PinWidget.PinView"
        android:layout_width="match_parent"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_height="wrap_content"
        android:inputType="number|numberPassword"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:itemCount="4"
        app:lineWidth="2dp"

        app:itemSpacing="16dp"
        app:viewType="line" />

</merge>