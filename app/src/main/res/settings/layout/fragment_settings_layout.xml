<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/button_back"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginBottom="32dp"
        android:layout_marginStart="@dimen/left_right_main_screen"
        android:layout_marginTop="52dp"
        android:src="@drawable/ic_back" />


    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/profile_label"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/personal_details"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_profile_additional"
        android:drawablePadding="16dp"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/personal_details"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wallet"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:drawableLeft="@drawable/ic_wallet"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:text="@string/wallet_title"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        style="@style/CommonStyle"
        android:id="@+id/change_password"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:drawableLeft="@drawable/ic_password_change"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:text="@string/change_password"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:drawableLeft="@drawable/ic_pin"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:text="@string/change_pin"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/upload_docs"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:drawableLeft="@drawable/ic_upload_documentation"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        android:text="@string/upload_documentation"
        android:textColor="@color/black"
        android:textSize="14sp" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>