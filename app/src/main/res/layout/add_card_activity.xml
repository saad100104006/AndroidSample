<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <ImageView
        android:id="@+id/ButtonBackCard"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="@dimen/left_right_main_screen"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="32dp"
        android:src="@drawable/ic_back" />


    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/add_a_new_card"
        android:layout_marginBottom="32dp"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/name_on_card"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/nameOnCard"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/underline_normal"
        android:drawablePadding="10dp"
        android:hint="@string/required"
        android:inputType="textNoSuggestions|text"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="14sp"
        android:theme="@style/Button.Black" />

    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/card_number"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/cardNumber"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/underline_normal"
        android:drawablePadding="10dp"
        android:hint="@string/required"
        android:inputType="textNoSuggestions|number"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="14sp"
        android:theme="@style/Button.Black" />

    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/expiration_date"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/ExpirationDate"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/underline_normal"
        android:drawablePadding="10dp"
        android:hint="@string/required"
        android:inputType="textNoSuggestions|number"
        android:lineSpacingExtra="2sp"
        android:digits="0123456789/"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="14sp"
        android:theme="@style/Button.Black" />

    <TextView
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="@string/security_code"
        android:textAllCaps="true"
        android:textColor="@color/black"
        android:textSize="10sp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/securityCode"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:background="@drawable/underline_normal"
        android:drawablePadding="10dp"
        android:hint="@string/required"
        android:inputType="textNoSuggestions|number"
        android:digits="0123456789"
        android:maxLength="3"
        android:lineSpacingExtra="2sp"
        android:maxLines="1"
        android:paddingBottom="8dp"
        android:paddingEnd="0dp"
        android:paddingStart="0dp"
        android:textColor="@color/black"
        android:textColorHint="@color/hint"
        android:textSize="14sp"
        android:theme="@style/Button.Black" />


    <Button
        android:id="@+id/saveCard"
        style="@style/CommonButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:background="@drawable/oval_button_gray"
        android:enabled="false"
        android:letterSpacing="0.17"
        android:lineSpacingExtra="2sp"
        android:text="@string/save_card"
        android:textColor="@color/white"
        android:theme="@style/Button.Black" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="36dp" />

    </LinearLayout>

</ScrollView>