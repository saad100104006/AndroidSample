<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:orientation="vertical"
    tools:parentTag="android.widget.LinearLayout">

    <TextView
        android:id="@+id/title"
        style="@style/CommonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:layout_marginTop="32dp"
        android:lineSpacingExtra="12sp"
        android:text="@string/enter_your_pin"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <com.chaos.view.PinView
        android:id="@+id/loginPinView"
        style="@style/PinWidget.PinView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:inputType="number|numberPassword"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:itemCount="4"
        app:itemSpacing="16dp"
        app:itemWidth="64dp"
        app:lineWidth="2dp"
        app:viewType="line" />

</merge>