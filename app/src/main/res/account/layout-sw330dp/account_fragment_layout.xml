<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/buttonsBack"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginBottom="41dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="@dimen/left_right_main_screen"
        android:layout_marginTop="23dp"
        android:src="@drawable/ic_back" />


    <TextView
        style="@style/semiBold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginLeft="@dimen/left_right_main_screen"
        android:layout_marginRight="@dimen/left_right_main_screen"
        android:text="Account"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/personalDetails"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="14dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_personal_info" />

        <TextView

            style="@style/LogoutDialogStyle"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="46dp"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center_vertical"
            android:text="Personal information"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/wallet"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_wallet_2" />

        <TextView

            style="@style/LogoutDialogStyle"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:gravity="center_vertical"
            android:text="@string/wallet_title"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePassword"
        android:layout_width="match_parent"
        android:layout_height="41dp"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="30dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_change_password_2" />

        <TextView

            style="@style/LogoutDialogStyle"
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:gravity="center_vertical"
            android:text="@string/change_password"
            android:textColor="@color/black"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/changePin"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="49dp"
        android:layout_marginLeft="30dp"
        >


        <ImageView
            android:layout_width="32dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_change_pin" />

        <TextView

            style="@style/LogoutDialogStyle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="32dp"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:gravity="center_vertical"
            android:text="@string/change_pin"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/uploadDocs"
        android:layout_width="match_parent"
        android:layout_height="28.7dp"
        android:layout_marginLeft="30dp"
        >

        <ImageView
            android:layout_width="32dp"
            android:layout_height="28.7dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_upload_documentation" />


        <TextView

            style="@style/LogoutDialogStyle"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_marginLeft="@dimen/left_right_main_screen"
            android:layout_marginRight="@dimen/left_right_main_screen"
            android:gravity="center_vertical"
            android:text="@string/upload_documentation"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>


    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
