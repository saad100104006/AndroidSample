<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_bg"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/settings_title"
            style="@style/tvToolbarHeading"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="40dp"
            android:text="@string/str_settings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/menuAccount"
            style="@style/settings_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="44dp"
            android:drawableLeft="@drawable/ic_settings_account"
            android:drawablePadding="28dp"
            android:gravity="center_vertical"
            android:text="@string/settings_account"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.008"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/settings_title" />

        <TextView
            android:id="@+id/menuNotification"
            style="@style/settings_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_settings_notifications"
            android:drawablePadding="28dp"
            android:gravity="center_vertical"
            android:text="@string/settings_notifications"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuAccount" />


        <TextView
            android:id="@+id/menuReferrals"
            style="@style/settings_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_settings_referrals"
            android:drawablePadding="28dp"
            android:gravity="center_vertical"
            android:text="@string/settings_referrals"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuNotification" />

        <TextView
            android:id="@+id/menuSupport"
            style="@style/settings_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_settings_support"
            android:drawablePadding="28dp"
            android:gravity="center_vertical"
            android:text="@string/settings_support"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuAboutUs" />


        <TextView
            android:id="@+id/menuAboutUs"
            style="@style/settings_item_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_settings_aboutus"
            android:drawablePadding="28dp"
            android:gravity="center_vertical"
            android:text="@string/settings_about_us"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuReferrals" />


        <TextView
            android:id="@+id/menuLogout"
            style="@style/settings_item_text"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="28dp"
            android:layout_marginTop="40dp"
            android:drawableLeft="@drawable/ic_settings_logout"
            android:drawablePadding="28dp"
            android:gravity="center_vertical"
            android:text="@string/settings_logout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/menuSupport" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>